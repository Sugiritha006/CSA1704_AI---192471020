% sum_to_n(N, Sum) - Sum is the sum of integers from 1 to N

sum_to_n(1, 1).  % Base case: sum of 1 is 1

sum_to_n(N, Sum) :-
    N > 1,
    N1 is N - 1,
    sum_to_n(N1, Sum1),   % Recursive call
    Sum is Sum1 + N.      % Add N to the sum of 1..N-1
o/p
?- sum_to_n(5, Sum).
Sum = 15.

?- sum_to_n(10, Sum).
Sum = 55.
